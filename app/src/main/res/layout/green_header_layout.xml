<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_outer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_16sdp"
    android:background="@color/green_black"
    android:elevation="@dimen/_10sdp"
    android:padding="@dimen/_15sdp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:visibility="visible"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TookBook"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/iv_fav"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_toStartOf="@id/iv_cart"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="visible"
        android:src="@drawable/ic_favorite"
        app:tint="@color/white"
        android:layout_marginTop="@dimen/_5sdp"/>

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:src="@drawable/ic_cart"
        app:tint="@color/white"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="@dimen/_24ssp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for books to rent"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="#D2D3D3"
        android:textColorHint="#D2D3D3"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_bg"
        android:textSize="@dimen/_12ssp"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_3sdp"
        android:layout_below="@+id/tv_home"/>

</RelativeLayout>


